<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle"/>
    </item>
    <item
        android:bottom="-100dp"
        android:left="-80dp"
        android:right="-80dp"
        android:top="0dp">
        <shape android:shape="oval">
            <gradient
